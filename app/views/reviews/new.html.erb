<%= simple_form_for([@booking, @review], remote: true) do |f| %>
  <%= f.error_notification %>
  <div class="contrainer pt-2">
    <div class="row justify-content-center">
      <div class="col-12 col-md-6 col-lg-3">
        <h2 class="text-center text-primary mb-5 mt-5">Leave a review</h2>
        <div class="row">
          <div class="col">
            <div class="form-inputs">
              <div class="row">
                <div class="col">
                  <div class="pb-3">
                    <%= f.input :rating, collection: (1..5)%>
                  </div>
                </div>
              </div>
              <div class="pb-3">
                <%= f.input :content%>
              </div>
            </div>
          </div>
        </div>
        <div class="form-actions mb-4">
          <%= f.submit "Send review", class: "btn btn-info btn-block" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
