<div class="container boxes">
  <% @teachers.each do |teacher| %>
    <div class="row justify-content-between">
      <div class="col-7 mr-2 mb-3 card-deck teacher-card" >
          <div class="row justify-content-between">
            <div class="col-4">
              <% if teacher.photo.attached? %>
                <%= cl_image_tag teacher.photo.key, class: "teacher-avatar" %>
              <% else %>
                <i class="fas fa-user-circle fa-2x avatar text-secondary" data-toggle="dropdown"></i>
              <% end %>
              <strong><%= "#{teacher.user.first_name} #{teacher.user.last_name}"%></strong>
            </div>
            <% teacher.speciality.each do |speciality| %>
              <%= speciality %>
            <% end %>
            <br>
            <div>
              <span><%= teacher.description %></span>
            </div>
          </div>
      </div>


      <div class="col-4 card-deck ninja-card">
        <span class="disabled"></span>
          <% if teacher.photo.attached? %>
            <%= cl_image_tag teacher.photo.key, class: "teacher-avatar" %>
          <% else %>
            <i class="fas fa-user-circle fa-2x avatar text-secondary" data-toggle="dropdown"></i>
          <% end %>
        <br>
        <br>
        <h5><%= "#{teacher.user.first_name} #{teacher.user.last_name}"%> -
          <% teacher.speciality.each do |speciality| %>
            <%= speciality %>
          <% end %>
        </h5>
        <br><br>
        <strong>Description</strong>
        <br>
        <%= teacher.description %>
        <br><br>
        <strong>Price</strong>
        <br>
        R$<%= teacher.price %> + R$<%= teacher.fee %> per extra student
        <br>
        <br>
        <%= link_to "Book Now", new_teacher_booking_path(teacher.id), class: "btn btn-primary btn-block" %>
      </div>
    </div>
  <% end %>
</div>
