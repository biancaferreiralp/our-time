<div class="container boxes">
  <% @teachers.each do |teacher| %>
    <div class="row justify-content-between">
      <div class="col-7 card-deck teacher-card mb-50" >
          <div>
            <div class="row no-gutters">
              <div class="col-md-4">
                <% if teacher.photo.attached? %>
                  <%= cl_image_tag teacher.photo.key, crop: :fill, width: 200, height: 200, class: "teacher-avatar img-fluid" %>
                <% else %>
                  <i class="fas fa-user-circle fa-2x avatar text-secondary" data-toggle="dropdown"></i>
                <% end %>
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5><strong><%= "#{teacher.user.first_name} #{teacher.user.last_name}"%></strong> -
                    <% teacher.speciality.each do |speciality| %>
                      <%= speciality %>
                    <% end %>
                  </h5>
                  <p class="card-text"><%= teacher.description.truncate(275) %></p>
                  <p class="card-text"><small class="text-muted"><p>Rating: <%= teacher.average_rating %></p></small></p>
                </div>
              </div>
            </div>
          </div>
      </div>

      <div class="col-5 card-deck ninja-card">
        <span class="disabled"></span>
        <div class="col-md-12">
          <h5><strong><%= "#{teacher.user.first_name} #{teacher.user.last_name}"%></strong> -
            <% teacher.speciality.each do |speciality| %>
              <%= speciality %>
            <% end %>
          </h5>
        </div>
        <div class="card-body">
          <strong>Diplomas</strong>
          <p class="card-text"> <%= teacher.diploma %> </p>
          <strong>Additional infos</strong>
          <p class="card-text"> <%= teacher.additional_informations %> </p>
          <strong>Price</strong>
          <p class="card-text"> R$<%= teacher.price %> + R$<%= teacher.fee %> per extra student </p>
          <br>
          <%= link_to "Book Now", new_teacher_booking_path(teacher.id), class: "btn btn-primary col-md-6 ml-4 mr-4" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
