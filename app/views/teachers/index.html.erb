<div class="container boxes">
  <% @teachers.each do |teacher| %>
    <div class="row justify-content-between">
      <div class="col-7 mr-2 mb-3 " >
        <div class="card-deck">
          <div class="row justify-content-between">
            <div class="col-4">
              <strong><%= "#{teacher.user.first_name} #{teacher.user.last_name}"%></strong>
            </div>
            <% teacher.speciality.each do |speciality| %>
              <%= speciality %>
            <% end %>
            <br>
            <div>
              <span><%= teacher.description %></span>
            </div>
          </div>
        </div>
      </div>

      <div class="col-4" style="visibility: hidden">
        <div class="card-deck">
          <span class="disabled"></span>
        </div>
      </div>
    </div>
  <% end %>
</div>
