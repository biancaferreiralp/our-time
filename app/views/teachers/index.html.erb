<div class="container boxes">
  <% @teachers.each do |teacher| %>
    <div class="row justify-content-between">
      <div class="col-7 card-deck teacher-card" >
          <div>
            <div class="row no-gutters">
              <div class="col-md-4">
                <% if teacher.photo.attached? %>
                  <%= cl_image_tag teacher.photo.key, class: "teacher-avatar" %>
                <% else %>
                  <i class="fas fa-user-circle fa-2x avatar text-secondary" data-toggle="dropdown"></i>
                <% end %>
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5><strong><%= "#{teacher.user.first_name} #{teacher.user.last_name}"%></strong> -
                    <% teacher.speciality.each do |speciality| %>
                      <%= speciality %>
                    <% end %>
                  </h5>
                  <p class="card-text"><%= teacher.description %></p>
                  <p class="card-text"><small class="text-muted"><p>Rating: <%= teacher.average_rating %></p></small></p>
                </div>
              </div>
            </div>
            <%= link_to "Book Now", new_teacher_booking_path(teacher.id), class: "btn btn-outline-info" %>
          </div>
      </div>

      <div class="col-5 card-deck ninja-card">
        <span class="disabled"></span>
          <% if teacher.photo.attached? %>
            <%= cl_image_tag teacher.photo.key, class: "teacher-avatar" %>
          <% else %>
            <i class="fas fa-user-circle fa-2x avatar text-secondary" data-toggle="dropdown"></i>
          <% end %>
        <br>
        <br>
        <h5><strong><%= "#{teacher.user.first_name} #{teacher.user.last_name}"%></strong> -
          <% teacher.speciality.each do |speciality| %>
            <%= speciality %>
          <% end %>
        </h5>
        <br><br>
        <strong>Description</strong>
        <br>
          <%= teacher.description %>
        <br><br>
        <strong>Diplomas</strong>
        <br>
          <%= teacher.diploma %>
        <br><br>
        <strong>Price</strong>
        <br>
          R$<%= teacher.price %> + R$<%= teacher.fee %> per extra student
        <br>
        <br>
        <%= link_to "Book Now", new_teacher_booking_path(teacher.id), class: "btn btn-primary btn-block col-md-6 ml-4 mr-4" %>
      </div>
    </div>
  <% end %>
</div>
