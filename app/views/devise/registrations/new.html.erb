<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="contrainer pt-2">
    <div class="row justify-content-center">
      <div class="col-12 col-md-6 col-lg-3">
        <h2 class="text-center mb-5 devise-padding">CREATE YOUR ACCOUNT</h2>
        <div class="row">
          <div class="col">
            <div class="form-inputs">
              <div class="row">
                <div class="col">
                  <div class="pb-3">
                    <%= f.input :first_name, required: true, placeholder: "First name"%>
                  </div>
                </div>
                <div class="col">
                  <div class="pb-3">
                    <%= f.input :last_name, required: true, placeholder: "Last name"%>
                  </div>
                </div>
              </div>
              <div class="pb-3">
                <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }, placeholder: "Your email"%>
              </div>
              <div class="pb-3">
                <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" }, placeholder: "Your password" %>
              </div>
              <div class="pb-3">
                <%= f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" }, placeholder: "Confirm your password" %>
              </div>
              <div class="pb-3">
                <%= f.input :gender, collection: User::GENDER %>
              </div>
              <div class="pb-3">
                <%= f.input :document, placeholder: "CPF" %>
              </div>
              <div class="pb-3">
                <%= f.input :phone_number %>
              </div>
              <div class="pb-3">
                <%= f.input :address, input_html: {id: "location"} %>
              </div>
              <div class="pb-3">
                <%= f.input :photo, as: :file, placeholder: "Upload your profile picture" %>
              </div>
            </div>
          </div>
        </div>
        <div class="form-actions mb-4">
          <%= f.submit "Create an account", class: "btn btn-primary btn-block" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

  <div class="contrainer mt-3 mb-5">
    <div class="row justify-content-center">
      <div class="col-12 col-md-6 col-lg-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
