<div class="container">
  <h1 class="highlight">Mailbox</h1>
  <br>
  <div class="row">
    <div class="col-xs-12">
      <div class=”list-group”>
        <div class=”list-group-item”>
          <% @chatrooms.each do |chatroom| %>
            <span><%= "#{chatroom.user.first_name} #{chatroom.user.last_name}" %></span>
            <small><%= chatroom.created_at.strftime("%a %b %e at %l:%M%p") %></small>
            <br>
            <%= link_to "Access to the chat", chatroom_path(chatroom.id), class: "btn btn-primary btn-block" %>
            <br>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
